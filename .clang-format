---
Language: Cpp
BasedOnStyle: Google
IndentWidth: 4
UseTab: Never

AllowAllParametersOfDeclarationOnNextLine: false
AlwaysBreakAfterReturnType: TopLevelDefinitions
BinPackArguments:  false
BinPackParameters: false
ColumnLimit:       100
BreakBeforeBraces: Linux
BreakBeforeBinaryOperators: All
AlignOperands:   Align
DerivePointerAlignment: false  # necessary for the pointer-alignment
PointerAlignment: Left
BraceWrapping:
  AfterCaseLabel:  true
  AfterClass:      true
  AfterControlStatement: true
  AfterEnum:       true
  AfterFunction:   true
  AfterNamespace:  true
  AfterObjCDeclaration: true
  AfterStruct:     true
  AfterUnion:      true
  AfterExternBlock: true
  BeforeCatch:     true
  BeforeElse:      true
  BeforeLambdaBody: true
  BeforeWhile:     true
  IndentBraces:    true
