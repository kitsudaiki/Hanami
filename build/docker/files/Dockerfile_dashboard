FROM kitsudaiki/hanami_ai_base:develop

COPY Hanami-AI/src/frontend/Hanami-AI-Dashboard /etc/Hanami-AI-Dashboard

# Remove symlinks in order to replace them by the real repos
RUN rm /etc/Hanami-AI-Dashboard/src/sdk /etc/Hanami-AI-Dashboard/src/libKitsunemimiHanamiMessages /etc/Hanami-AI-Dashboard/src/Hanami-AI-Dashboard-Dependencies

COPY Hanami-AI/src/sdk /etc/Hanami-AI-Dashboard/src/sdk
COPY Hanami-AI/src/libraries/libKitsunemimiHanamiMessages /etc/Hanami-AI-Dashboard/src/libKitsunemimiHanamiMessages
COPY Hanami-AI/src/frontend/Hanami-AI-Dashboard-Dependencies /etc/Hanami-AI-Dashboard/src/Hanami-AI-Dashboard-Dependencies
